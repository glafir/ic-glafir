- model_class = Train
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize

%h1 Listing trains

%table.table.table-striped.table-hover.table-condensed
  %thead
    %tr
      %th Station start
      %th Station finish
      %th Train number
      %th
      %th
      %th

  %tbody
    - @trains.each do |train|
      %tr
        %td= train.station_start
        %td= train.station_finish
        %td= train.train_number
        %td= link_to 'Show', train
        %td= link_to 'Edit', edit_train_path(train)
        %td= link_to 'Destroy', train, :method => :delete, :data => { :confirm => 'Are you sure?' }

= link_to t('.new', :default => t("helpers.links.new")), new_train_path, :class => 'btn btn-primary'

