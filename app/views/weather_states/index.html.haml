- model_class = WeatherState
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize

%h1 Listing weather_states

%table.table.table-striped.table-hover.table-condensed
  %thead
    %tr
      %th Weather
      %th Main
      %th Description
      %th Icon
      %th
      %th
      %th

  %tbody
    - @weather_states.each do |weather_state|
      %tr
        %td= weather_state.weather_id
        %td= weather_state.main
        %td= weather_state.description
        %td= weather_state.icon
        %td= link_to 'Show', weather_state
        %td= link_to 'Edit', edit_weather_state_path(weather_state)
        %td= link_to 'Destroy', weather_state, :method => :delete, :data => { :confirm => 'Are you sure?' }

= link_to t('.new', :default => t("helpers.links.new")), new_weather_state_path, :class => 'btn btn-primary'

