<table class='pretty tablo'>
  <tr>
    <th><%= sortable "iata_code"%></th>
    <th><%= sortable "icao_code"%></th>
    <th><%= sortable "name_rus"%></th>
    <th>city_rus"</th>
    <th><%= sortable "iso_code"%></th>
    <th>Расписание и табло.</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @airports.each do |airport| %>
  <tr>
        <td><%= airport.iata_code %></td>
        <td><%= airport.icao_code %></td>
        <td><%= link_to airport.name_rus, airport, :class => "demo1", :id => airport.id.to_s%></td>
        <td><%= link_to airport.town.city_rus, town_path(airport.town_id) unless airport.town.blank?%>
        <%#= link_to airport.city_rus, :controller=>"/airports", :action => "city", :city_eng => airport.city_eng if airport.town.blank?%></td>
        <td><%= airport.iso_code %></td>
        <td nowrap><a href="/airports/<%= airport.id%>/aptt" >вылет/прилёт</a>
        <% if policy(airport).edit? %>
        <td><%= link_to 'Edit', edit_airport_path(airport) %></td>
        <%end%>
        <% if policy(airport).destroy? %>
        <td><%= link_to 'Destroy', airport, method: :delete, data: { confirm: "Вы уверены, что хотите удалить аэропорт "+airport.name_rus+" в городе "+ airport.city_rus} %></td>
        <%end%>
  </tr>
<% end %>
</table>

