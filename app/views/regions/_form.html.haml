= form_for @region do |f|
  - if @region.errors.any?
    #error_explanation
      %h2= "#{pluralize(@region.errors.count, "error")} prohibited this region from being saved:"
      %ul
        - @region.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name_rus
    = f.text_field :name_rus
  .field
    = f.label :name_eng
    = f.text_field :name_eng
  .field
    = f.label :country_id
    = f.number_field :country_id
  .field
    = f.label :area
    = f.text_field :area
  .field
    = f.label :population
    = f.number_field :population
  .field
    = f.label :capitalcity_id
    = f.number_field :capitalcity_id
  .actions
    = f.submit 'Save'
