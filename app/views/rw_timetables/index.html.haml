- model_class = RwTimetable
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize

%h1 Listing rw_timetables

%table.table.table-striped.table-hover.table-condensed
  %thead
    %tr
      %th Train
      %th Station
      %th Time arr
      %th Time dep
      %th
      %th
      %th

  %tbody
    - @rw_timetables.each do |rw_timetable|
      %tr
        %td= rw_timetable.train_id
        %td= rw_timetable.station_id
        %td= rw_timetable.time_arr
        %td= rw_timetable.time_dep
        %td= link_to 'Show', rw_timetable
        %td= link_to 'Edit', edit_rw_timetable_path(rw_timetable)
        %td= link_to 'Destroy', rw_timetable, :method => :delete, :data => { :confirm => 'Are you sure?' }

= link_to t('.new', :default => t("helpers.links.new")), new_rw_timetable_path, :class => 'btn btn-primary'

