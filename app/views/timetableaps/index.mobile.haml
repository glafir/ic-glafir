%h1 Поиск авиарейсов
= form_tag timetableaps_path, :method => 'get', :id => "timetableaps_search" do
  %p
    = label_tag :start_ap, "Откуда:"
    = autocomplete_field_tag 'start', '', autocomplete_airport_city_rus_airports_path, :size => 20, 'data-auto-focus' => true, :update_elements => {:id => '#start_ap'}, :value => params[:start], autofocus: true
    = hidden_field_tag :start_ap, params[:start_ap]
  %p
    = label_tag :end_ap, "Куда:"
    = autocomplete_field_tag 'end', '', autocomplete_airport_city_rus_airports_path, :size => 20,  'data-auto-focus' => true, :update_elements => {:id => '#end_ap'}, :value => params[:end]
    = hidden_field_tag :end_ap, params[:end_ap]
  %p
    = label_tag :aircomapny, "Авиакомпания:"
    = autocomplete_field_tag 'search_a', '', autocomplete_aircompany_airline_name_rus_aircompanies_path, :size => 20, 'data-auto-focus' => true, :update_elements => {:id => '#search_al'}, :minLength => 4,  :value => params[:search_a]
    = hidden_field_tag :search_al
  %p
    = label_tag :date, "По дате окончания:"
    = select_date(@fc_start, :prefix => 'fc_start')
    = select_date(@fc_end, :prefix => 'fc_end')
  %p
    = label_tag :aircomapny, "По номеру рейса:"
    = number_field_tag :flight_number,  params[:flight_number]
  %p
    = submit_tag "Search", :name => nil
  = render "layouts/per_page"
  #timetableaps= render "timetableaps/timetableaps"
