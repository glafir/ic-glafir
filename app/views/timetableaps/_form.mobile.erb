      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Flight_Number %><br />
    <%if params[:Flight_Number].blank? %>
    <%= f.number_field :Flight_Number %>
    <% else %>
    <%= f.number_field :Flight_Number, :value => ((params[:Flight_Number]).to_i + 1).to_s %>
  <% end %>
  </div>
  <div class="field">
    <%= f.label :aircompany_airline_name_rus %><br />
