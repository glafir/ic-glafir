    <%#= f.text_field :aircompany_airline_name_rus, data: {autocomplete_source: aircompanies_path}  %>
    <%= f.collection_select :aircompany_id, Aircompany.order(:airline_name_rus), :id, :airline_name_rus.to_s %>
  <% else %>
    <%= f.collection_select :aircompany_id, Aircompany.order(:airline_name_rus), :id, :airline_name_rus.to_s, :selected => params[:aircompany_id]%>
  <% end %>
  </div>
  <div class="field">
    <%= f.label :way_start %><br />
    <%if params[:way_start].blank? %>
      <%= f.select :way_start, Airport.where(iso_code: 'EZ').order(:name_rus).collect{|item| [item.name_rus, item.id]} %>
    <%else%>
      <%= f.select :way_start, Airport.where(iso_code: 'EZ').order(:name_rus).collect{|item| [item.name_rus, item.id]},  :selected => params[:way_end] %>
