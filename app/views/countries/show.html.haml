-if policy(@country).edit?
  .jqbutton
    = link_to 'Edit', edit_country_path(@country), :class => 'jqbutton'

%h2 Country #{@country.country_name}
%p
  %b Country Name:
  = @country.country_name
%p
  %b ISO A2 (IATA code):
  = @country.country_iata_code
%p
  %b ISO A3 (ICAO code):
  = @country.country_icao_code
%p
  %b Number:
  = @country.country_number

= render "airports/index"
= render "towns/index"

