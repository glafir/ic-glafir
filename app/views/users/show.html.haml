- model_class = User
%h3.center-block
  #{t '.title', :default => model_class.model_name.human.titleize} #{@user.username} (#{@user.email})
.field-form
  .col-md-7.visible-md-block
    = image_tag @user.avatar.size_500.url, :class => 'img-circle' unless @user.avatar.size_500.nil?
  .col-lg-7.visible-lg-block
    = image_tag @user.avatar.size_600.url, :class => 'img-circle' unless @user.avatar.size_600.nil?
  .col-sm-7.visible-sm-block
    = image_tag @user.avatar.size_400.url, :class => 'img-circle' unless @user.avatar.size_400.nil?
  .col-xs-12.visible-xs-block
    = image_tag @user.avatar.size_300.url, :class => 'img-circle' unless @user.avatar.size_300.nil?
  .col-lg-5.col-md-5.col-sm-5.col-xs-12
    %p
      %b Имя:
      = @user.username
    %p
      %b Email:
      = @user.email
    %p
      %b Time_zone:
      = @user.time_zone
      = ActiveSupport::TimeZone.new(@user.time_zone).formatted_offset
    %p
      %b Town:
      = @user.town.accent_city
    %p
      %b Статус:
      = @user.role
      = link_to @user.aircompany.airline_name_rus, @user.aircompany unless @user.aircompany_id == 1
    %p
      %b Текущий адрес:
      = @user.current_sign_in_ip
    %p
      %b Адрес предыдущего захода:
      = @user.last_sign_in_ip
    %p
      %b Время предыдущего захода:
      = @user.last_sign_in_at
    - if policy(@user).index?
      = link_to "Все пользователи", users_path, class: "btn btn-primary"
    ||
    - if policy(@user).edit?
      = link_to "Редактировать пользователя", edit_user_path(@user), class: "btn btn-primary"
