    <h3>Users</h3>
    <div class="column">
      <table class="table">
            <thead><tr>
                  <th>User Avatar</th>
                  <th>User Login</th>
                  <th>User Role</th>
                  <th></th>
                </tr></thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
<%unless user.unknown?%>
<td><div class="round-image-50">
  <%= image_tag(user.avatar.url(:thumb)) %>
</div></td>
<td>
  <%= link_to user.username, user %>
</td>
<td>
  <%= user.role %>
</td>
<td>
<% if policy(user).edit? %>
  <%= link_to "Edit", edit_user_path(user) unless user.unknown?%>
<% end %>
<% if policy(user).destroy? %>
  <%= link_to("Delete user", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'button-xs') unless user == current_user || user.unknown? %>
<% end %>
</td>
<%end%>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
<% if policy(@users).new? %>
  <%=link_to "Add new user", new_user_path, class: "jqbutton"%>
<% end %>

