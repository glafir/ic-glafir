    .container-fluid
      - if user_signed_in?
        = render "layouts/header.html"
        .row
          .col-lg-12.col-md-12.col-sm-12.col-xs-12
            = bootstrap_flash
            = yield
      -else
        .row
          .col-lg-12.col-md-12.col-sm-12.col-xs-12
            = bootstrap_flash
            = yield
