= form_for [@country, @town] do |f|
  - if @town.errors.any?
    #error_explanation
      %h2= "#{pluralize(@town.errors.count, "error")} prohibited this town from being saved:"
      %ul
        - @town.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :country
    = f.text_field :country_id, autofocus: true 
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :accent_city
    = f.text_field :accent_city
  .field
    = f.label :city_rus
    = f.text_field :city_rus
  .field
    = f.label :region
    = f.text_field :region
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude
  .actions
    = f.submit 'Save'
