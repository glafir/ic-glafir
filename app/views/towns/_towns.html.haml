= paginate @towns, :remote => true, :theme => 'twitter-bootstrap-4'
%table.table-striped.table-hover.table-condensed
  %tr
    %th
      =sortable "country"
    %th
      =sortable "city"
    %th
      =sortable "accent_city"
    %th
      =sortable "city_rus"
    %th
      =sortable "region"
    %th
      =sortable "latitude"
    %th
      =sortable "longitude"
    %th

  - @towns.each do |town|
    %tr
      %td= link_to town.country.country_name, town.country
      %td= link_to town.city, [town.country, town]
      %td= link_to town.accent_city, [town.country, town]
      %td= town.city_rus
      %td= town.region
      %td= town.latitude
      %td= town.longitude
      %td
        = link_to 'Edit', edit_country_town_path(@country, town) if policy(town).edit?
        = link_to 'Destroy', town, :method => :delete, :data => { :confirm => 'Are you sure?' } if policy(town).destroy?

= paginate @towns, :remote => true, :theme => 'twitter-bootstrap-4'
