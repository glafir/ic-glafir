%h1 Listing stations
= render "stations/paginate_top"
%table.table.table-striped.table-hover.table-condensed
  %thead
    %tr
      %th ID
      %th Name rus
      %th Name eng
      %th Zone station
      %th Sttaion type
      %th
      %th
      %th

  %tbody
    - @stations.each do |station|
      %tr
        %td= station.id
        %td= link_to station.name_rus, station
        %td= link_to station.name_eng, station
        %td= station.station_zone_id
        %td= station.station_type.typename
        %td= link_to 'Edit', edit_station_path(station), class: 'btn btn-default'
        %td= link_to 'Destroy', station, class: 'btn btn-danger', :method => :delete, :data => { :confirm => 'Are you sure?' }

= render "stations/paginate_bottom"

%br
= link_to 'New Station', new_station_path
